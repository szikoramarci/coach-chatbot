/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "coach-chatbot",
	"main": "src/server.ts",
	"compatibility_date": "2025-08-30",
	"observability": {
		"enabled": true
	},
	// --- D1 (SQLite) ---
	// Tipp: lokálban elég a database_name, prod/staginghez hozzáadod az id-t is (wrangler link/console -> D1 id)
	"d1_databases": [
		{
		"binding": "DB",
		"database_name": "coach_bot_db",
		"database_id": "xxxx-en-figyelek-rad-chatbot"
		// "migrations_dir": "db/migrations" // ha migrációs lépésenként akarod kezelni
		}
	],

	// --- Durable Objects ---
	"durable_objects": {
		"bindings": [
			{
				"name": "UserRoom",
				"class_name": "UserRoom"
			}
		]
	},

	"migrations": [
		{
		"tag": "v1",       
		"new_classes": ["UserRoom"]
		}
	],

	// --- Környezeti változók ---
	"vars": {
		"OPENROUTER_MODEL": "meta-llama/llama-3.1-8b-instruct:free",
		"BOT_SHARED_SECRET": "change-me-in-secrets"
		// MEGJ: az API kulcsot NE itt tartsd; secrets-be tedd (wrangler secret put ...)
	},
}